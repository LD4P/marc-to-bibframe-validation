source 'https://rubygems.org'

gem 'linkeddata'
gem 'marc'
gem 'rspec'

group :development do
  gem 'yard' # for documentation
  gem 'rubocop'
  gem 'rubocop-rspec'
  gem 'faraday' # Used for HTTP (for SRU queries for LoC records)
end

# To use a debugger
gem 'pry', group: [:development, :test]
gem 'pry-byebug', group: [:development, :test]
